{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VLDB-Toolkits",
  "version": "0.1.0",
  "identifier": "com.easynet.VLDB-Toolkits",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "VLDB-Toolkits - Paper Management Platform",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "EASYNET Inc.",
    "copyright": "Â© 2025 EASYNET Inc.",
    "category": "Business",
    "shortDescription": "Paper Management Platform",
    "longDescription": "VLDB-Toolkits is a desktop application for managing academic papers and author information. Import Excel data, track paper metadata, manage author profiles, and export organized datasets.",
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "10.13"
    }
  }
}
